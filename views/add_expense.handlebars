<div class="container">
    <div class="row">
        <div class="form col-4">
            <h3>Hello {{name}}</h3>
            <p>Record your expenses on the form below</p>
            {{#if messages.success}}
            <p class="text-success flash">{{messages.success}}</p>
            {{/if}}
            {{#if messages.error}}
            <p class="text-danger flash">{{messages.error}}</p>
            {{/if}}
            <form method="post">
                <div class="col-12">
                    <label for="category" class="text-left">Category</label>
                    <select name="category" id="category">
                        <option value="none" selected disabled required>--categories--</option>
                        {{#each categories}}
                        <option value="{{id}}">{{category}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-12">
                    <label for="amount">Amount</label>
                    <input type="number" step=".01" name="amount" id="amount" required>
                </div>
                <div class="col-12">
                    <label for="date">Date</label>
                    <input type="date" name="date" id="date" min="{{minDate}}" max="{{maxDate}}" required>
                </div>
                <div class="col-12">
                    <button type="submit">Add Expense</button>
                </div>
            </form>
        </div>
    </div>
</div>